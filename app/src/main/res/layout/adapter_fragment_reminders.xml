<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_reminders"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card:cardCornerRadius="6dp"
    card:cardUseCompatPadding="true"
    card:contentPaddingBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/reminders_margin"
                android:src="@drawable/ic_insert_comment_black" />

            <TextView
                android:id="@+id/reminders_fragment_comment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:lines="1"
                android:maxLines="3"
                android:tag="@string/reminders_tag_comment" />

            <ImageView
                android:id="@+id/reminders_fragment_delete_reminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/reminders_margin"
                android:src="@drawable/ic_alarm_on_black" />

            <TextView
                android:id="@+id/reminders_fragment_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:tag="@string/reminders_tag_date" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
