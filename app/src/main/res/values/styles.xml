<resources>

    <!-- App Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#AEBFB2</item>
        <item name="colorPrimaryDark">#75927C</item>
        <item name="colorAccent">#B85967</item>
    </style>

    <style name="AppThemeWithToolbar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#AEBFB2</item>
        <item name="colorPrimaryDark">#75927C</item>
        <item name="colorAccent">#B85967</item>
    </style>

    <style name="AuthTheme" parent="FirebaseUI">
        <item name="colorPrimary">#AEBFB2</item>
        <item name="colorPrimaryDark">#75927C</item>
        <item name="colorAccent">#B85967</item>
        <item name="colorControlNormal">#B85967</item>
        <item name="colorControlActivated">#86b3bc</item>
    </style>

    <!-- EditText Theme -->
    <style name="EditTextEntrance">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:singleLine">true</item>
    </style>


    <!-- Theme TextInputLayout -->
    <style name="TextInputLayoutStyleEntrance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
    </style>


    <!-- Error in TextInputLayout -->
    <style name="ErrorText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>


    <!-- Register Btn -->
    <style name="EntranceButtonStyle" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/entrance_btn_padding</item>
        <item name="android:layout_marginRight">@dimen/entrance_btn_padding</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <!-- Btn Login -->
    <style name="BtnLoginStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>


    <!-- Scamper Activity Btn-->
    <style name="BtnScamperActivityStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:background">@drawable/scamper_activity_button_shape</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:textSize">30sp</item>
    </style>


    <!-- Scamper Activity-->
    <style name="TextScamperActivityStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="chart_style">
        <item name="android:layout_width">@dimen/chart_size</item>
        <item name="android:layout_height">@dimen/chart_size</item>
    </style>

    <style name="statistic_fragment_icon_style">
        <item name="android:visibility">invisible</item>
        <item name="android:layout_width">@dimen/statistic_fragment_icon_width</item>
        <item name="android:layout_height">@dimen/statistic_fragment_icon_height</item>
        <item name="android:layout_gravity">center|top</item>
        <item name="android:layout_marginRight">@dimen/statistic_fragment_icon_margin</item>
    </style>

    <style name="statistic_fragment_text_view_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:maxWidth">@dimen/statistic_fragment_max_width_text</item>
    </style>

    <style name="activityAddUserDataEditText">
        <item name="android:maxLength">3</item>
        <item name="android:layout_width">@dimen/activity_add_user_data_edit_text_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="activityAddUserInfoTextView">
        <item name="android:textSize">25sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>
</resources>
