<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingBottom="@dimen/reminders_fragment_card_view_padding_bottom"
    card:cardCornerRadius="@dimen/reminders_fragment_card_view_corner_radius"
    card:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/reminders_fragment_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/reminders_fragment_padding_view">

        <TextView
            android:id="@+id/reminders_fragment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/reminders_fragment_padding_view"
            android:paddingRight="@dimen/reminders_fragment_padding_view"
            android:paddingTop="@dimen/reminders_fragment_padding_top"
            android:textSize="@dimen/reminders_fragment_time_size"
            android:textStyle="italic" />


        <ImageView
            android:id="@+id/reminders_fragment_image_type_reminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/reminders_fragment_padding_view" />

        <TextView
            android:id="@+id/reminders_fragment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reminders_fragment_time"
            android:paddingLeft="@dimen/reminders_fragment_padding_view"
            android:textSize="@dimen/reminders_fragment_date_size" />

        <ImageView
            android:id="@+id/reminders_fragment_static_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reminders_fragment_date"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/reminders_fragment_padding_view"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_vec_line_reminders" />

        <ImageView
            android:id="@+id/reminders_fragment_delete_reminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reminders_fragment_static_line"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/reminders_fragment_padding_view"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_vec_delete" />

        <Switch
            android:id="@+id/reminder_fragment_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:padding="@dimen/reminders_fragment_padding_view" />

        <ImageButton
            android:id="@+id/reminders_fragment_image_expand_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/reminder_fragment_switch"
            android:layout_alignRight="@+id/reminder_fragment_switch"
            android:layout_below="@+id/reminder_fragment_switch"
            android:layout_marginTop="@dimen/reminders_fragment_padding_view"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingLeft="@dimen/reminders_fragment_padding_view"
            android:paddingRight="@dimen/reminders_fragment_padding_view"
            android:paddingTop="@dimen/reminders_fragment_padding_view"
            app:srcCompat="@drawable/ic_vec_expand_more_black" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
