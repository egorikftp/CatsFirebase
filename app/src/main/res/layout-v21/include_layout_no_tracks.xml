<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/fragment_fitness_data">

    <TextView
        android:id="@+id/fragment_fitness_data_text_no_tracks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fragment_fitness_data_image_cats_no_track"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:textAppearance="?android:textAppearanceMedium"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/fragment_fitness_data_image_cats_no_track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:elevation="5dp"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_vec_cats_no_track" />
</RelativeLayout>
