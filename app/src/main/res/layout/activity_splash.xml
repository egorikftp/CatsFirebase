<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_activity_splash_background"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/splash_screen_text_color"
        android:textSize="@dimen/splash_activity_text_size"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/splash_screen_cats_running"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/splash_screen_cats_running" />
</LinearLayout>
